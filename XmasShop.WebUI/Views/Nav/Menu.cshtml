@model IEnumerable<string>

<div class="card  rounded-0">
    <div class="card-body">
        <h5>
            @Ajax.RouteLink("Our Products", new
           {
               controller = "Product",
               action = "List"
           }, new AjaxOptions { UpdateTargetId = "main-row", OnComplete = "fnOnComplete", LoadingElementId = "loadingIcon" },
    new { @class = "list-group-item rounded-0 text-center" })
        </h5>

        @foreach (var link in Model)
            {<h5>
            @Ajax.RouteLink(link, new
       {
           controller = "Product",
           action = "List",
           category = link,
           page = 1
       },
new AjaxOptions { UpdateTargetId = "main-row", OnComplete = "fnOnComplete", LoadingElementId = "loadingIcon" },
new { @class = "list-group-item rounded-0 text-center" + (link == ViewBag.SelectedCategory ? " active" : "") }
)
        </h5>
        }

    </div>
</div>

        <script>
            function fnOnComplete() {
                $("div.data-nav").find("h5").children("*").removeClass("active");
                $(this).addClass(" active");
            }
        </script>

